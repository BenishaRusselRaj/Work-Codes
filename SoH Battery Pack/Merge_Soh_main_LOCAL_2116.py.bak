cols=['bin','nc_bms','SOH_BMS','nc_otd','SOH_otd','nc_cell_testing','SOH_cell_testing']

data_file=pd.DataFrame(columns=cols)
files=glob.glob("C:\\Users\\DELL\\Desktop\\Corona\\SOH - Battery Pack\\Data\\Combined_Summary_files\\*") # Path to the folder having the combined summary files
otd_file_path="C:\\Users\\DELL\\Desktop\\Corona\\SOH - Battery Pack\\Data\\iitm_charging_session_onetime_all_bin.tsv" # Path to the OTD file
for f in files:
